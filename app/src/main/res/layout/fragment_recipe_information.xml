<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.recipe.RecipeInformationFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:titleTextColor="@android:color/white" />

    <ImageView
        android:id="@+id/im_picture"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        tools:src="@tools:sample/avatars" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/padding16dp"
        android:layout_marginVertical="@dimen/padding16dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/padding16dp"
            android:layout_weight="0.8"
            android:textSize="18sp"
            tools:text="name" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:textSize="16sp"
            tools:text="1.5h" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_list_ingredients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/padding16dp"
        android:layout_marginBottom="@dimen/padding16dp"
        android:lineSpacingExtra="6dp"
        android:textSize="14sp"
        tools:text="* Potatos 2000g \n* Potatos 2000g\n* Potatos 2000g" />

    <TextView
        android:id="@+id/tv_recipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/padding16dp"
        android:layout_marginBottom="@dimen/padding16dp"
        android:lineSpacingExtra="6dp"
        android:textSize="16sp"
        tools:text="recipe recipe recipe recipe recipe recipe recipe recipe recipe recipe recipe recipe recipe recipe recipe recipe recipe recipe recipe recipe recipe recipe recipe recipe recipe recipe recipe recipe recipe recipe recipe recipe" />
</LinearLayout>